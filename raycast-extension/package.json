{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "nightshift",
  "title": "Night Shift Control",
  "description": "Control macOS Night Shift mode",
  "icon": "icon.png",
  "author": "your-username",
  "license": "MIT",
  "commands": [
    {
      "name": "toggle",
      "title": "Toggle Night Shift",
      "description": "Toggle Night Shift on/off",
      "mode": "no-view"
    },
    {
      "name": "on",
      "title": "Turn on Night Shift",
      "description": "Enable Night Shift",
      "mode": "no-view"
    },
    {
      "name": "off",
      "title": "Turn off Night Shift",
      "description": "Disable Night Shift",
      "mode": "no-view"
    },
    {
      "name": "status",
      "title": "Night Shift Status",
      "description": "Show current Night Shift status",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.64.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
